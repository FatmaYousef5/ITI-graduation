@model ServiceTypeModel

<form method="post" asp-action="AddServiceType">
    <div class="input-group mb-3">
        <input type="text" asp-for="ServiceType" class="form-control" placeholder="Service Type Name..." />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Add Service Type</button>
        </div>
    </div>
    <span asp-validation-for="ServiceType" class="text-danger"></span>
</form>