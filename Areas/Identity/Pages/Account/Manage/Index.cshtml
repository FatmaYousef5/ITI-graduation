    <form id="profile-form" method="post" enctype="multipart/form-data">
        <div id="div1" class="card sticky-bottom">
          
            <div class="text-center pb-3" >
                @if (Model.Input.Photo != "")
                {
                        <img class="img1 card-img-top imgs" id="profilePicture" src="~/Images/UsersPhoto/@Model.Input.Photo">
                }
